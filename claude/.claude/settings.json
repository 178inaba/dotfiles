{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(go build:*)",
      "Bash(go doc:*)",
      "Bash(go mod:*)",
      "Bash(go test:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(rg:*)"
    ],
    "deny": [
      "Read(.env*)"
    ],
    "additionalDirectories": [
      "~/.claude/"
    ],
    "defaultMode": "acceptEdits"
  }
}
