{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git switch:*)",
      "Bash(go build:*)",
      "Bash(go doc:*)",
      "Bash(go generate:*)",
      "Bash(go help:*)",
      "Bash(go mod:*)",
      "Bash(go test:*)",
      "Bash(go version)",
      "Bash(go vet:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(npm info:*)",
      "Bash(npm install:*)",
      "Bash(npm test:*)",
      "Bash(npx eslint:*)",
      "Bash(npx tsc:*)",
      "Bash(npx vue-tsc:*)",
      "Bash(rg:*)",
      "Bash(sed:*)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:docs.github.com)",
      "WebFetch(domain:go.dev)",
      "WebFetch(domain:pkg.go.dev)",
      "WebFetch(domain:mermaid.js.org)",
      "WebFetch(domain:docs.mermaidchart.com)",
      "WebFetch(domain:typescript-eslint.io)",
      "WebSearch"
    ],
    "deny": [
      "Read(.env*)"
    ],
    "defaultMode": "acceptEdits",
    "additionalDirectories": [
      "~/.claude/"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "for i in {1..5}; do afplay -t 0.1 /System/Library/Sounds/Ping.aiff; done"
          }
        ]
      }
    ]
  }
}
