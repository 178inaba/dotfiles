{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(gh pr list:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git switch:*)",
      "Bash(go build:*)",
      "Bash(go doc:*)",
      "Bash(go mod:*)",
      "Bash(go test:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(rg:*)",
      "WebFetch(domain:mermaid.js.org)",
      "WebFetch(domain:docs.mermaidchart.com)",
      "WebSearch"
    ],
    "deny": [
      "Read(.env*)"
    ],
    "additionalDirectories": [
      "~/.claude/"
    ],
    "defaultMode": "acceptEdits"
  }
}
