{
  "language": "japanese",
  "respectGitignore": true,
  "awsAuthRefresh": "$CLAUDE_AWS_AUTH_REFRESH_SCRIPT",
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(docker compose:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh repo clone:*)",
      "Bash(gh repo view:*)",
      "Bash(gh run view:*)",
      "Bash(gh search:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git log:*)",
      "Bash(git mv:*)",
      "Bash(git pull:*)",
      "Bash(git push)",
      "Bash(git status:*)",
      "Bash(git switch:*)",
      "Bash(git symbolic-ref:*)",
      "Bash(go build:*)",
      "Bash(go doc:*)",
      "Bash(go generate:*)",
      "Bash(go get:*)",
      "Bash(go help:*)",
      "Bash(go list:*)",
      "Bash(go mod:*)",
      "Bash(go test:*)",
      "Bash(go tool vet:*)",
      "Bash(go version)",
      "Bash(go vet:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(rg:*)",
      "Bash(sed:*)",
      "Bash(test:*)",
      "Bash(tree:*)",
      "Bash(wc:*)",
      "Skill",
      "WebFetch",
      "WebSearch"
    ],
    "defaultMode": "acceptEdits",
    "additionalDirectories": [
      "~/.claude/"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Ping.aiff"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/slack-notify.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh"
  },
  "enabledPlugins": {
    "gopls-lsp@claude-plugins-official": true
  }
}
